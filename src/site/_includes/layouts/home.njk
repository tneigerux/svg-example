{% extends "layouts/parent.njk" %}

  {% block content %}
      <div class="image-section upper-section" style="background: url({{ himgpath }}{{ himgfilename }}); background-position: right; background-repeat: no-repeat; background-size: cover;">
          <div class="upper-section__sign-box">
            <h1 class="upper-section-sign">{{ head }}</h1>
            <h2 class="upper-section-sign">{{ subhead }}</h2>                 
          </div>

        <div class="amazon-link-box">
          <a class="amazon-link" href="{{ ctalink }}">
                <p>BUY NOW</p>
                <p>on Amazon</p>
            </a>  
        </div>
      </div> 

      <div class="product-section">

        <img src="../../images/product-shot.png">

        <div class="product-section__text-box">
          
            {{ content | safe }}

        </div>        
      </div>

      <div class="comparison-table-section">
          {% include "comparison-table.njk" %}
      </div>
      
      {% include "app-feature-section.njk" %}
{% endblock %}