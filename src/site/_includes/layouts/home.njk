{% extends "layouts/parent.njk" %}

  {% block content %}
      <div class="image-section upper-section">
          <div class="image-section__img-box box-mob" style="background: #8F7D6B url({{ himgpath }}{{ heroupperimgmob }}); background-position: bottom; background-repeat: no-repeat; background-size: contain;"></div>
          <div class="image-section__img-box box-desk" style="background: url({{ himgpath }}{{ heroupperimg }}); background-position: right; background-repeat: no-repeat; background-size: cover;"></div>
   
        <div class="upper-section-content">
          <div class="upper-section__sign-box">
            <h1 class="upper-section-sign">{{ head }}</h1>
            <h2 class="upper-section-sign">{{ subhead }}</h2> 

            <a class="amazon-link home-amazon-link" href="{{ amazon.link }}">
              <p>{{ amazon.text }}</p>
            </a>
          </div>

          <div class="upper-section__options-box">
            <div class="options-box-row">
              <h3 class="options-box-tab active">{{ tab1 }}</h3>
              <h3 class="options-box-tab">{{ tab2 }}</h3>
              <h3 class="options-box-tab">{{ tab3 }}</h3>
            </div>

            <div class="options-box-col-section active">
              {# three columns at all #}
              {% for i in range(0, 3) -%}
              <div class="options-box-col">
                {# looping through all elements of a tab #}
                {% for item in options.reminders %}

                    {% include "parts/home-option-box-desk.njk" %}

                {% endfor %}

              </div>
            {% endfor %}
            </div>  

            <div class="options-box-col-section">
              {# three columns at all #}
              {% for i in range(0, 3) -%}
              <div class="options-box-col">
                {# looping through all elements of a tab #}
                {% for item in options.doorbell %}
                
                    {% include "parts/home-option-box-desk.njk" %}

                {% endfor %}

              </div>
            {% endfor %}
            </div>  

            <div class="options-box-col-section">
              {# three columns at all #}
              {% for i in range(0, 3) -%}
              <div class="options-box-col">
                {# looping through all elements of a tab #}
                {% for item in options.security %}
                
                    {% include "parts/home-option-box-desk.njk" %}

                {% endfor %}

              </div>
            {% endfor %}
            </div>  

          </div>

          <div class="upper-section__options-box-mob">
              <div class="options-box-mob__option">
                <div class="options-box-mob__option-tab">
                  <div class="options-arrow"></div>
                  <h3>{{ tab1 }}</h3>
                </div>
                
                <div class="options-block">
                  {% for item in options.reminders %}
                      <h3 class="option-item">{{item}}</h3>
                  {% endfor %}
                </div>
              </div>
              <div class="options-box-mob__option">
                <div class="options-box-mob__option-tab">
                  <div class="options-arrow"></div>
                  <h3>{{ tab2 }}</h3>
                </div>
                
                <div class="options-block">
                  {% for item in options.doorbell %}
                      <h3 class="option-item">{{item}}</h3>
                  {% endfor %}
                </div>
              </div>
              <div class="options-box-mob__option">
                <div class="options-box-mob__option-tab">
                  <div class="options-arrow"></div>
                  <h3>{{ tab3 }}</h3>
                </div>
                
                <div class="options-block">
                  {% for item in options.security %}
                      <h3 class="option-item">{{item}}</h3>
                  {% endfor %}
                </div>
              </div>
              
          </div>

          </div>

           

      </div> 

      <div class="product-section">

        <img src="../../images/product-shot.png">

        <div class="product-section__text-box">
          
            {{ content | safe }}

        </div>        
      </div>

      <div class="comparison-table-section">
          {% include "comparison-table.njk" %}
      </div>
      
      {% include "app-feature-section.njk" %}
{% endblock %}

