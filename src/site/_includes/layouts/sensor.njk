{% extends "layouts/parent.njk" %}

{% block content %}
      <div class="sensor-image-section upper-section">
          <div class="image-section__img-box box-mob" style="background: url({{ himgpath }}{{ heroupperimgmob }}); background-position: center; background-repeat: no-repeat; background-size: cover;"></div>
          <div class="image-section__img-box box-desk" style="background: url({{ himgpath }}{{ heroupperimg }}); background-position: center; background-repeat: no-repeat; background-size: cover;"></div>

        <div class="sensor-image-section__sign-box">  
          <h1>{{ heroheader}}</h1>    
          <h3 class="sensor-hero-text">{{ herotext1 }}</h3>     
          <h3 class="sensor-hero-text">{{ herotext2 }}</h3>     
              <a class="amazon-link" href="{{ amazon.link }}">
                <p>{{ amazon.text }}</p>
            </a>  
        </div>        
      </div> 

      <div class="sensor-content-block">

      <div class="sensor-info-section">
        <div class="sensor-info-section__inner-box">
          <h2 class="sensor-mob-text">{{ herotext1 }}</h2>     
          <h2 class="sensor-mob-text">{{ herotext2 }}</h2> 
          {{ content | safe }}
          </div>
      </div>

      <div class="sensor-dimensions-section">
        <div class="sensor-dimensions-section__col">
          <table class="sensor-dimensions-section__table" cellspacing="0">
            <tr>
              <td class="cell-bg-gray">{{dimension_sign}}</td>
              <td>{{inch_dimensions}}</td>
            </tr>
            <tr>
              <td class="cell-bg-gray">{{weight_sign}}</td>
              <td>{{ounces}}</td>
            </tr>
          </table>
        </div>
        <div class="sensor-dimensions-section__col">
          <table class="sensor-dimensions-section__table" cellspacing="0">
            <tr>
              <td class="cell-bg-gray">{{dimension_sign}}</td>
              <td>{{mm_dimensions}}</td>
            </tr>
            <tr>
              <td class="cell-bg-gray">{{weight_sign}}</td>
              <td>{{grams}}</td>
            </tr>
          </table>
        </div>
      </div>

      </div>

      <div class="help-qa-section">
  <div class="help-sign-section">
    <h2>{{qasign}}</h2>
  </div>
  <div class="help-content-section help-content-desk">
    <div class="help-content-column">
      {%- for item in collections.qasensor -%}
        {% if (loop.index + 2) % 3 == 0 %}
        <div class="help-content-item {{ item.data.class }}">
          {{ item.templateContent | safe }}
        </div>
        {% endif %}      
      {%- endfor -%}
    </div>
    <div class="help-content-column">
      {%- for item in collections.qasensor -%}
        {% if (loop.index + 1) % 3 == 0 %}
        <div class="help-content-item {{ item.data.class }}">
          {{ item.templateContent | safe }}
        </div>
        {% endif %}      
      {%- endfor -%}
    </div>
    <div class="help-content-column">
      {%- for item in collections.qasensor -%}
        {% if loop.index % 3 == 0 %}
        <div class="help-content-item {{ item.data.class }}">
          {{ item.templateContent | safe }}
        </div>
        {% endif %}      
      {%- endfor -%}
    </div> 
  </div>

  <div class="help-content-section help-content-mob">
    {%- for item in collections.qasensor -%}
        <div class="help-content-item {{ item.data.class }}">
          {{ item.templateContent | safe }}
        </div>    
      {%- endfor -%}
      </div>
</div>

      <div class="guarantee-section">
        <div class="guarantee-section__img-box">
          <svg class="ribbon-icon"><use xlink:href="/images/sprite-sheet.svg#ribbon"/></svg>
        </div>
        <div class="guarantee-section__text-box">
          <h2>{{guaranteesign1}}<sup style="font-size: 16px">{{guaranteetm}}</sup> {{guaranteesign2}}</h2>
          <h3>{{guaranteetext}}</h3>
          <h3 class="guarantee-bottom-text">{{guaranteebottomtext}}</h3>
        </div>
      </div>

 {% endblock %}