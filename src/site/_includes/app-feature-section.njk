<div class="app-feature-section">

    {# DESKTOP #}
    <div class="app-feature-section__desktop">
        <div class="app-feature-section__main">            
            <div id="app-feature-section__content">
                    {% include "parts/feature-01.njk" %}
                    {% include "parts/feature-02.njk" %}
                    {% include "parts/feature-03.njk" %}
                    {% include "parts/feature-04.njk" %}
                    {% include "parts/feature-05.njk" %}
                    {% include "parts/feature-06.njk" %}
            </div>
        </div>

        <div class="app-feature-section__bottom">
            <div class="bottom-container active" onClick="changeInterractive('feature-01')">
                <p>Simple Setup Process</p>
            </div>
            <div class="bottom-container" onClick="changeInterractive('feature-02')">
                <p>Reminders</p>
            </div>
            <div class="bottom-container" onClick="changeInterractive('feature-03')">
                <p>Notifications</p>
            </div>
            <div class="bottom-container" onClick="changeInterractive('feature-04')">
                <p>Alerts</p>
            </div>
            <div class="bottom-container" onClick="changeInterractive('feature-05')">
                <p>Weather Based Reminders</p>
            </div>
            <div class="bottom-container" onClick="changeInterractive('feature-06')">
                <p>Customizable Intelligence</p>
            </div>
            <div class="bottom-container"></div>
        </div>
    </div>
    {# / DESKTOP #}

    {# MOBILE #}
    <div id="app-feature-section__mob" class="app-feature-section__mob">
        <div id="app-feature-sliding-part-box">            
            <div id="app-feature-sliding-part" class="content-block">
                    {% include "parts/feature-mob-01.njk" %}
                    {% include "parts/feature-mob-02.njk" %}
                    {% include "parts/feature-mob-03.njk" %}
                    {% include "parts/feature-mob-04.njk" %}
                    {% include "parts/feature-mob-05.njk" %}
                    {% include "parts/feature-mob-06.njk" %}        
            </div>
        </div>
        <div class="content-block__navigation-part">
                <p>Swipe for more:</p>
                <div class="navigation-dot-pane">
                    {% for i in range(1, 7) -%}
                        <div class="navigation-dot feature-interractive-mob feature-mob-0{{i}} {% if i == 1 %} active{% endif %}" onClick="changeInterractiveMob('feature-mob-0{{i}}')">
                            <div class="navigation-dot-inner"></div>
                        </div>
                    {%- endfor %}
                    
                </div>
            </div>
    </div>
    {# / MOBILE #}

</div>

